<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cards_gutter_half"
    android:elevation="@dimen/cardview_elevation"
    tools:targetApi="lollipop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recipe_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:contentDescription="@string/recipe_image_desc"/>

        <LinearLayout
            android:id="@+id/content_recipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/divider_padding"
            android:paddingBottom="@dimen/divider_padding"
            android:paddingStart="@dimen/divider_padding"
            android:paddingEnd="@dimen/divider_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/cardview_margin"
                android:textSize="@dimen/cardview_text"/>

            <TextView
                android:id="@+id/list_recipe_no_of_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/cardview_text"
                tools:text="@string/recipe_list_ingredients_text"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>